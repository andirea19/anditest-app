{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",          // ProjektÂ­wurzel
    "paths": {
      "@/*": ["./src/*", "./lib/*", "./*"] // merged paths
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "scripts/seed.js"],
  "exclude": ["node_modules"]
}